// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @unique
  login     String
  password  String
  version   Int
  createdAt Int
  updatedAt Int

  @@map("users")
}

model Artist {
  id     String  @unique
  name   String
  grammy Boolean

  @@map("artists")
}

model Album {
  id     String  @unique
  name   String
  year Int
  artistId String?

  @@map("albums")
}

model Track {
  id       String  @unique
  name     String
  artistId String?
  albumId  String?
  duration Int

  @@map("tracks")
}

model Favorites {
  id       String  @unique
  artists String[]
  albums  String[]
  tracks  String[]

  @@map("favorites")
}
