// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @unique
  login     String
  password  String
  version   Int
  createdAt Int
  updatedAt Int

  @@map("users")
}

model Artist {
  id          String     @unique
  name        String
  grammy      Boolean
  Album       Album[]
  Track       Track[]
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId String?

  @@map("artists")
}

model Album {
  id          String     @unique
  name        String
  year        Int
  artist      Artist?    @relation(fields: [artistId], references: [id])
  artistId    String?
  Track       Track[]
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId String?

  @@map("albums")
}

model Track {
  id          String     @unique
  name        String
  artist      Artist?    @relation(fields: [artistId], references: [id])
  artistId    String?
  album       Album?     @relation(fields: [albumId], references: [id])
  albumId     String?
  duration    Int
  Favorites   Favorites? @relation(fields: [favoritesId], references: [id])
  favoritesId String?

  @@map("tracks")
}

model Favorites {
  id      String   @unique
  artists Artist[]
  albums  Album[]
  tracks  Track[]

  @@map("favorites")
}
